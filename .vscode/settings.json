{
	"cSpell.enabled": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": false,
	"editor.detectIndentation": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 2,
	"editor.wordWrapColumn": 100,
	"[javascript]": {
		"editor.formatOnSave": true
	},
	"[handlebars]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
}
